<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.gospelcoding.biblehead.LearnActivity">

    <TextView
        android:id="@+id/verse_reference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Genesis 1:1"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/mark_learned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/mark_learned"
        android:onClick="clickMarkLearned"/>

    <TextView
        android:id="@+id/verse_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verse_reference"
        app:layout_constraintBottom_toTopOf="@id/rewind"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="In the beginning"
        android:fontFamily="monospace"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/rewind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/hide_med"
        android:padding="20dp"
        android:text="@string/rewind"
        android:onClick="clickHideRewind"/>

    <Button
        android:id="@+id/hide_med"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/rewind"
        app:layout_constraintEnd_toStartOf="@id/hide_fast"
        android:padding="20dp"
        android:text="@string/forward"
        android:onClick="clickHideMed"/>

    <Button
        android:id="@+id/hide_fast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/hide_med"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:text="@string/fast_forward"
        android:onClick="clickHideFast"/>

</android.support.constraint.ConstraintLayout>
